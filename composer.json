{
    "name": "scummvm/cloud",
    "description": "ScummVM Cloud Auth portal",
    "keywords": ["scummvm"],
    "homepage": "https://cloud.scummvm.org",
    "license": "MIT",
    "authors": [
        {
          "name": "Matan Bareket",
          "email": "mataniko@scummvm.org"
        }
    ],
    "require": {
        "php": ">=5.6",
        "guzzlehttp/guzzle": "^6.3",
        "league/oauth2-google": "^3.0",
        "monolog/monolog": "^1.17",
        "nikolaposa/rate-limit": "^1.0",
        "pragmarx/random": "^0.2.2",
        "predis/predis": "^1.1",
        "slim/php-view": "^2.0",
        "slim/slim": "^3.1",
        "stevenmaguire/oauth2-box": "^2.0",
        "stevenmaguire/oauth2-dropbox": "^3.1",
        "stevenmaguire/oauth2-microsoft": "^2.2"
    },
    "require-dev": {
        "phpunit/phpunit": ">=5.0",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit",
        "lint": [
          "phpcbf ./src"
        ]
    }
}
